<div class="section">
	<% if user_signed_in? %>
		<%= render 'conversation_list' %>
	<% else %>

	<div class="page-content center">
		<h1>Have fun discussing, debating, and reflecting on ideas you care about with close friends.</h1>

		<div id="carousel-home" class="carousel slide carousel-fade" data-ride="carousel">
			<div class="carousel-inner" role="listbox">
				<!-- image credit: illustrators at 16 personalities -->
				<div class="item active"><img src="/images/h_friendship.png" alt="friendship"></div>
				<div class="item"><img src="/images/h_relationship.png" alt="relationship"></div>
				<div class="item"><img src="/images/h_reflection.png" alt="reflection"></div>
			</div>
		</div>

		<p><%= link_to "GET STARTED", new_user_registration_path, class: "btn btn-primary btn-primary-action" %></p>
	</div>

	<% end %>
</div>

<script type="text/javascript">
	$('.carousel').carousel();
</script>