<div class="section-userform">
	<div class="fit-comfort">
		<%= link_to image_tag("/images/wayt_logo.png", alt: "what are your thoughts?"), root_path %>
	</div>

	<div class="fit-comfort fit-top-border">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
			<h3>Welcome back!</h3>
			<p><%= f.email_field :email, placeholder: 'email', class: "form-control center" %></p>
			<p><%= f.password_field :password, placeholder: "password", class: "form-control center" %></p>
			<p><%= f.submit "LOG IN", class: "btn btn-block btn-primary btn-primary-action" %></p>
			<div style="margin-top:-1.3em">
				<label class="text-secondary"><%= f.check_box :remember_me %>&nbsp;&nbsp;remember me</label>
			</div>
		<% end %>
	</div>

	<%= render "devise/shared/links" %>
</div>
