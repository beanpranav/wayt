<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	<%= devise_error_messages!.html_safe %>
	<div class="section-userform">
		<div class="fit-comfort">
			<%= link_to image_tag("/images/wayt_logo.png", alt: "what are your thoughts?"), root_path %>
		</div>

		<div class="fit-comfort fit-top-border">
			<h4>Reset Password</h4>
			<p><%= f.email_field :email, placeholder: "email", class: "form-control center", :autofocus => true %></p>
			<p><%= f.submit "SEND INSTRUCTIONS", class: "btn btn-block btn-primary btn-primary-action" %></p>
		</div>

		<%= render "devise/shared/links" %>
	</div>
<% end %>
		